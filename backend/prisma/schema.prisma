generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AppOwner {
  id             Int       @id @default(autoincrement())
  name           String
  email          String    @unique
  clerkUserId    String    @unique
  hashedPassword String
  projects       Project[]
}

model User {
  id         Int      @id @default(autoincrement())
  email      String?  @unique
  name       String?
  createdAt  DateTime @default(now())
  events     Event[]
  properties Json?
}

model Project {
  id         Int       @id @default(autoincrement())
  name       String
  apiKey     String    @unique
  createdAt  DateTime  @default(now())
  events     Event[]
  AppOwner   AppOwner? @relation(fields: [appOwnerId], references: [id])
  appOwnerId Int?
}

model Event {
  id         Int      @id @default(autoincrement())
  event      String
  distinctId String   @unique
  timestamp  DateTime @default(now())
  project    Project  @relation(fields: [projectId], references: [id])
  projectId  Int
  user       User?    @relation(fields: [userId], references: [id])
  userId     Int?
  properties Json
}
